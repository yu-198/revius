<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/adminheader"%>
	</div>
	<div class="col-lg-9", style="margin-top: 70px; ">
		<div>
			<h1>ジャンル管理画面</h1>
			<%= form_for(@genre, url:admins_genres_path) do |f| %>
				<div class="form-group">
					<label>ジャンル</label>
					<%= f.text_field :name %>
				</div>
				<div class="btn-group" style =" margin-bottom: 10px;">
					<%= f.submit "追加"%>
				</div>
			<% end %>
			<table class="table">
					<tr>
						<th>ジャンル名</th>
						<th></th>
						<th></th>
					</tr>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td>
							<% if genre.is_disable == false %>
								<%= link_to disable_admins_genre_path(genre), method: :patch do %>
									<span class="btn btn-danger">無効にする</span>
								<% end %>
							<% elsif genre.is_disable == true %>
								<%= link_to enable_admins_genre_path(genre), method: :patch  do %>
									<span class="btn btn-success">有効にする</span>
								<% end %>
							<% end %>
						</td>
						<td>
							<%= link_to edit_admins_genre_path(genre.id) do %>
								<span class="btn btn-info">編集する</span>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>