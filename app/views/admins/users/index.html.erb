<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/adminheader"%>
 	</div>
 	<div class="col-lg-9 user", style="margin-top:70px;">
		<h1>会員一覧画面</h1>
		<table class="table">
			<tr>
				<th>会員ID</th>
				<th>名前</th>
				<th>メールアドレス</th>
				<th>顧客ステータス</th>
				<th></th>
			</tr>
			<% @user.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.first_name %> <%= user.last_name %></td>
				<td><%= user.email %></td>
				<td>
					<% if user.is_deleted == false %>
						<span>有効会員</span>
					<% else %>
						<span>退会済み</span>
					<% end %>
				</td>
				<td><%= link_to "編集する", edit_admins_user_path(user.id) %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>