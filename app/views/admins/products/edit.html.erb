<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/adminheader"%>
	</div>
	<div class="col-lg-9", style = "margin-top: 70px;">
		<h1>商品編集画面</h1>
		<%= form_for(@product, url: admins_product_path, method: :patch) do |f| %>
		<%= attachment_image_tag @product, :image, :fill, 150, 150 %>
		<div class="form-group">
			<label>商品画像</label>
			<%= f.attachment_field :image %>
		</div>
		<div class="form-group">
			<label>商品名</label>
			<%= f.text_field :name %>
		</div>
		<div class="form-group">
			<label>商品説明</label>
			<%= f.text_field :introduction %>
		</div>
		<div class="form-group">
			<label>ジャンル</label>
			<%= f.collection_select :genre_id, Genre.where(is_disable: false), :id, :name %>
		</div>
		<div class="form-group">
			<label>価格(税抜価格)</label>
			<%= f.text_field :price %>
		</div>
		<div class="form-group">
			<label>販売ステータス</label>
			<%= f.select :is_stopped, {販売中:false,販売停止:true} %>
		</div>
		<div class="form-group">
			<label>在庫数</label>
			<%= f.select :stock, [*1..100] %>
		</div>
			<%= f.submit "登録する" %>
		<% end %>
	</div>
</div>