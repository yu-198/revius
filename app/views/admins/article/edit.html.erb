<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/adminheader"%>
	</div>
	<div class="col-lg-9">
		<h1>記事編集画面</h1>
		<%= simple_form_for(@article, url:admins_article_path, method: :patch) do |f| %>
		<div class="form-group">
			<label>記事名</label>
			<%= f.text_field :name %>
		</div>
		<div class="form-group">
			<label>記事の内容</label>
			<%= f.input :introduction, as: :summernote %>
		</div>
		<div>
			<%= f.submit "登録する" %>
		</div>
		<% end %>
	</div>
</div>