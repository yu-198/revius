<style>
	.item{
		display: inline-block;
	}
	.item a{
		text-decoration:none;
		color: #555555;
	}
</style>

<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/header" %>
	</div>
	<div class="col-lg-9", style ="margin-top: 70px;">
		<h1>注文履歴一覧</h1>
		<% @order.each do |order| %>
			<div class="item", style = "width: 260px; margin-top: 10px;">
				<%= link_to product_path(order.product.id) do %>
					<%= attachment_image_tag serch_product(order), :image, :fill, 180, 180 %><br>
				<% end %>
				<span>注文日</span>
					<span><%= order.created_at.strftime('%Y/%m/%d')%></span><br>
				<span>配送状況</span>
					<span><%= order.delivery_status %></span><br>
				<%= link_to product_path(order.product.id)do %>
					<span>再度購入</span>
				<% end %>
			</div>
		<% end %>
		<div class="page">
			<%= paginate @order %>
		</div>
	</div>
</div>