<style>
	.item{
		display: inline-block;
	}
	.item a{
		text-decoration:none;
		color: #555555;
	}
</style>


<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/header" %>
	</div>
	<div class="col-lg-9", style ="margin-top: 70px;">
		<h1>注文履歴一覧</h1>
		<% @order.each do |order| %>
			<div class="item", style = "width: 260px; margin-top: 10px;">
				<%= attachment_image_tag serch_product(order), :image, :fill, 180, 180 %><br>
				<p> 注文日 <%= order.created_at.strftime('%Y/%m/%d')%></p>
				<p> 配送状況 <%= order.delivery_status %></p>
				<%= link_to product_path(order.product.id)do %>
					<p>再度購入</p>
				<% end %>
				<%= link_to order_path(order.id) do %>
					<p>注文内容を表示</p>
				<% end %>
			</div>
		<% end %>
		<div class="page">
			<%= paginate @order %>
		</div>
	</div>
</div>