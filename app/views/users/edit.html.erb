<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/header" %>
	</div>
	<div class="col-lg-9", style="margin-top: 70px;">
		<div>
			<h1>ユーザ編集画面</h1>
			<%= form_for(@user, url:user_path(@user), method: :patch) do |f| %>
				<%= link_to leave_user_path(@user), method: :patch do %>
			    	<span class="btn btn-info" style="margin-bottom: 10px;">退会する</span>
			    <% end %>
			    <div class="form-group">
					<label>姓</label>
					<%= f.text_field :first_name %>
				</div>
				<div class="form-group">
					<label>名</label>
					<%= f.text_field :last_name %>
				</div>
				<div class="form-group">
					<label>セイ</label>
					<%= f.text_field :first_name_kana %>
				</div>
				<div class="form-group">
					<label>メイ</label>
					<%= f.text_field :last_name_kana %>
				</div>
				<div class="form-group">
						<label>郵便番号</label>
						<%= f.text_field :postal_code %>
				</div>
				<div class="form-group">
					<label>住所</label>
					<%= f.text_field :address %>
				</div>
				<div class="form-group">
					<label>電話番号</label>
					<%= f.text_field :phone %>
				</div>
				<div class="form-group">
					<label>メールアドレス</label>
					<%= f.text_field :email %>
				</div>
				<div class="btn-group">
					<%= f.submit "更新する" %>
				</div>
			<% end %>
		</div>
	</div>
</div>