<style>
	.user th{
		font-size: 20px;
		margin: 5px;
	}
	.user td{
		font-size: 20px;
		margin: 5px;
	}
	.user a{
		text-decoration:none;
	}
</style>
<div class="row">
	<div class="col-lg-3">
		<%= render "layouts/header" %>
	</div>
	<div class="col-lg-9", style="margin-top:70px;">
		<div>
			<h1>マイページ</h1>
			<table class="user ">
					<tr>
						<th>名前</th>
						<td><%= @user.first_name %></td>
						<td><%= @user.last_name %></td>
					</tr>
					<tr>
						<th>フリガナ</th>
						<td><%= @user.first_name_kana %></td>
						<td><%= @user.last_name_kana %></td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= @user.postal_code %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= @user.phone%></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= @user.address %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @user.email %></td>
					</tr>
			</table>
			<div class="user">
				<%= link_to edit_user_registration_path do %>
					<span class="btn btn-success" style="margin: 5px 0 5px 0; ">パスワードを編集する</span>
				<% end %><br>
				<%= link_to edit_user_path(@user) do %>
					<span class="btn btn-info" style="margin-top: 5px;">登録情報の登録</span>
				<% end %><br>
				<%= link_to orders_path do %>
					<h4 class="btn btn-danger" >注文履歴</h4>
				<% end %>
			</div>
		</div>
	</div>
</div>