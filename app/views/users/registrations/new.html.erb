<div class="row">
  <div class="col-lg-3">
    <%= render "layouts/header"%>
  </div>
  <div class="col-lg-9", style = "padding: 70px 0 0 70px;">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <label>姓</label><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
      <div class="field">
       <label>名</label><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="field">
        <label>セイ</label><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
      <div class="field">
        <label>メイ</label><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="field">
       <label>郵便番号</label><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="field">
        <label>住所</label><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
      <div class="field">
       <label>電話番号</label><br />
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
      </div>
      <div class="field">
        <label>メールアドレス</label><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <label>パスワード</label><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
       <label>パスワード(確認用)</label><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions">
        <%= f.submit "登録する" %>
      </div>
      <%= link_to new_user_session_path do %>
        <span>Log in</span>
      <% end %>
    <% end %>
  </div>
</div>
